# Nexi AI - API Server Dockerfile
FROM node:20-alpine

# Install build dependencies for better-sqlite3
RUN apk add --no-cache python3 make g++

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

RUN mkdir -p /app/data

ENV NODE_ENV=production
ENV NEXI_DATA_DIR=/app/data
ENV PORT=3000

EXPOSE 3000

# Run the API server
CMD ["node", "--import", "tsx", "examples/api-server.ts"]
